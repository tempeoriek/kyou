@model ProductDetailsModel
@using Nop.Web.Models.Catalog;
<link rel="stylesheet" type="text/css" href="~/Scripts/Plugins/slick/slick.css">
<link rel="stylesheet" type="text/css" href="~/Scripts/Plugins/slick/slick-theme.css">

@if (Model.PictureModels.Count > 0)
{


  <div class="row p-3">
    <div class="carousel slide col-md-2 p-0 d-none d-md-block">
      @foreach (var imgs in Model.PictureModels) {
        <a href="@imgs.FullSizeImageUrl" data-fancybox="gallery">
          <img class="img-fluid w-100" src="@imgs.FullSizeImageUrl" style="height: 20%;" />
        </a>

      }

    </div>

    <div id="carouselExampleIndicators" class="carousel slide col-12 col-md-10" data-ride="carousel">
      <div class="carousel-inner">
        @{ int index = 1;

          foreach (var p in Model.PictureModels)
          {
            if (index == 1)
            {

              <div class="carousel-item active">
                <img class="img-fluid w-100" src="@p.FullSizeImageUrl" alt="@p.AlternateText" title="@p.Title" />
              </div>
            }
            else
            {
              <div class="carousel-item">
                <img class="img-fluid w-100" src="@p.FullSizeImageUrl" alt="@p.AlternateText" title="@p.Title" />
              </div>
            }

            index++;
          }
        }
      </div>
    </div>
  </div>

  <div class="row no-gutters px-3">
    @for (int i = 0; i < Model.PictureModels.Count; i++)
    {
      var pic = Model.PictureModels[i];
      <div class="col-4 d-block d-md-none">
          <a href="@pic.FullSizeImageUrl" data-fancybox="gallery">
              <img src="@pic.FullSizeImageUrl" class="img-fluid" id="prodimg-@i"/>
          </a>
          
      </div>
    }
  </div>


}

<script src="~/Scripts/Plugins/slick/slick.js" type="text/javascript" charset="utf-8"></script>
<script>
  $(document).ready(function () {
    $('.carouseldesktop').slick({
      slidesToShow: 1.5,
      slideToScroll: 2,
      infinite: true,
      dots: false,
      centerMode: false,
      arrows: false,
      autoplay: true,
      autoplaySpeed: 2000,
    });
  });
</script>
